{
  "name": "@maxmilton/solid-router",
  "version": "0.0.4",
  "publishConfig": {
    "access": "public"
  },
  "description": "A light-weight History API based router for Solid",
  "license": "MIT",
  "repository": "maxmilton/solid-router",
  "author": "Max Milton <max@happycode.ltd>",
  "main": "dist/index.jsx",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "NODE_ENV=production tsc",
    "dev": "NODE_ENV=development tsc --watch --preserveWatchOutput",
    "lint": "yarn run lint:js && yarn run lint:ts",
    "lint:js": "eslint --ignore-pattern test --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx,.mjs,.cjs .",
    "lint:ts": "tsc --noEmit",
    "prebuild": "rm -rf dist; mkdir dist",
    "test": "echo 'TODO: Setup solid compatible test tooling'; exit 0",
    "__test": "c8 --all --include=src --reporter=text --reporter=lcovonly uvu -r esbuild-register test '\\.test\\.ts$'",
    "__test-e2e": "uvu -r esbuild-register test/e2e '\\.test\\.ts$'"
  },
  "files": [
    "dist",
    "src"
  ],
  "peerDependencies": {
    "solid-js": "^0.26.0"
  },
  "dependencies": {
    "qss": "^2.0.3",
    "regexparam": "^1.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "eslint": "7.26.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-import": "2.22.1",
    "prettier": "2.3.0",
    "solid-js": "0.26.5",
    "typescript": "4.2.4"
  },
  "TODO: Add test tooling deps": {
    "@types/node": "15.0.2",
    "@types/jsdom": "16.2.10",
    "c8": "7.7.2",
    "esbuild-register": "2.5.0",
    "playwright-chromium": "1.11.0",
    "jsdom": "16.5.3",
    "uvu": "0.5.1"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all"
  }
}
