{
  "name": "@maxmilton/solid-router",
  "version": "0.0.9",
  "description": "A light-weight History API based router for Solid",
  "repository": "maxmilton/solid-router",
  "author": "Max Milton <max@happycode.ltd>",
  "license": "MIT",
  "main": "dist/index.jsx",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "pnpm run prebuild && tsc",
    "dev": "tsc --watch --preserveWatchOutput",
    "lint": "pnpm run lint:js && pnpm run lint:ts",
    "lint:js": "eslint --ignore-path .gitignore --ext .cjs,.js,.jsx,.mjs,.ts,.tsx .",
    "lint:ts": "tsc --noEmit --project test",
    "prebuild": "rm -rf dist; mkdir dist",
    "test": "jest --coverage",
    "test-build-fixtures": "pnpm run --dir test/fixtures build",
    "test-e2e": "pnpm run test-build-fixtures && jest --testRegex='test/e2e/index.ts$' test/e2e/index.ts"
  },
  "peerDependencies": {
    "solid-js": "^1.1.0"
  },
  "dependencies": {
    "qss": "^2.0.3",
    "regexparam": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.15.0",
    "@babel/plugin-transform-modules-commonjs": "7.15.0",
    "@babel/preset-typescript": "7.15.0",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-node-resolve": "13.0.4",
    "@testing-library/jest-dom": "5.14.1",
    "@types/jest": "26.0.24",
    "@types/node": "15.14.7",
    "@typescript-eslint/eslint-plugin": "4.29.1",
    "@typescript-eslint/parser": "4.29.1",
    "babel-preset-solid": "1.1.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-import": "2.24.0",
    "eslint-plugin-jest": "24.4.0",
    "eslint-plugin-unicorn": "35.0.0",
    "get-port": "5.1.1",
    "jest": "27.0.6",
    "kleur": "4.1.4",
    "playwright-chromium": "1.13.1",
    "prettier": "2.3.2",
    "prettier-plugin-pkg": "0.10.0",
    "prettier-plugin-sh": "0.7.1",
    "rollup": "2.56.2",
    "sirv": "1.0.12",
    "solid-js": "1.1.0",
    "solid-testing-library": "0.2.1",
    "typescript": "4.3.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "./node_modules/prettier-plugin-pkg",
      "./node_modules/prettier-plugin-sh"
    ]
  }
}
